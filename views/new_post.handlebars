<section class="hero is-primary is large is bold">
  <div class="hero-body">
    <div class="container">
      <div class="columns">
        <div class=" column is-two-fifths">
          <div class="title">
            <a id="go-main">
            <img id="the-brain" src="image/jbookLogo.PNG" height="65" width="auto" alt="your chatty brain">
            </a>
            </div>
          </div>
          <div class="column is-two-fifths">
        </div>
        <div id="user-div">
        <h3>Talk to yourself & share your ideas !!</h3>
        </div>
      </div>
    </div>
  </div>
</section>
<br>
<section class="Site-content">
  <div class="container">
    <div class="field is-horizontal">
      <div class="field-label is-normal">
        <label class="label">Category</label>
        </div>
          <div id ="category-type" class="field-body">
            <div class="field is-narrow">
              <div class="control">
                <div class="select is-fullwidth">
                  <select id="post-category">
                    <option value="Entertainment">Entertainment</option>
                    <option value="Travel">Travel</option>
                    <option value="Career">Career</option>
                    <option value="Social">Social</option>
                    <option value="Education">Education</option>
                    <option value="Finance">Finance</option>
                    <option value="ETC">ETC</option>
                  </select>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div id="new-category-input-div" class="field is-horizontal">
      </div>
      <div class="field is-horizontal">
        <div class="field-label is-normal">
          <label class="label">Let's talk to Your Mind</label>
            </div>
              <div class="field-body">
                <div class="field">
                  <div class="control">
                    <textarea id="post-body" class="textarea" type="file" placeholder="Create a New Post"></textarea>
                  </div>
                </div>
              </div>
            </div>
            <div class="field is-horizontal">
              <div class="field-label is-normal">
                <label class="label">Attach a file</label>
                  </div>
                    <div class="field-body">
                      <div class="field">
                        <div class="control">
                        <input id="post-file" type="text" placeholder="" style="width: 500px !important" disabled></input>
                        <input type="file" id="file-input">
                        <div id="fileview" style="margin-top: 20px"></div>
                       </div>
                    </div>
                  </div>
                </div>
              <div class="field is-horizontal">
            <div class="field-label">
            &nbsp;
            </div>
            <div class="field-body">
              <div class="field">
                <div class="control">
                  <button id="submit-post-button" class="button is-primary">
                    Submit!
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
      <footer class="has-text-centered">
        Lovingly designed and built by: JEMS (Jinwoo park | Enakshi Sengupta | Giselle Mudge | Solomon)
      </footer>
